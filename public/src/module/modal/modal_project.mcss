.m-p-transfer {
  .modal-dialog {
    overflow: initial;
  }

  .p-transfer {
    .p-transfer-tip {
      height: 20px;
      color: #f04c62;
      text-align: left;
    }

    .p-transfer-empty {
      text-align: center;
      padding: 20px 0px;

      span {
        line-height: 22px;
        display: inline-block;
        padding-left: 10px;
        vertical-align: middle;
      }
    }

    .transfer {
      display: flex;
      padding: 0px 0px 20px 0px;
    }

    .label {
      line-height: 30px;
      text-align: right;
    }

    .field {
      flex: 1;
      text-align: left;
    }

    .u-select2 {
      width: 100%;
    }
  }
}
